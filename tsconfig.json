{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2020",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "lib": [
      "ES2023"
    ],
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "strict": true,
    "noImplicitReturns": true,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "resolveJsonModule": true,
    "strictPropertyInitialization": false,
    "paths": {
      "@config/*": [
        "src/configs/*"
      ],
      "@criteria/*": [
        "src/main/criteria/*",
      ],
      "@exceptions/*": [
        "src/@core/src/exceptions/*",
        "src/@core/@share/src/exceptions/*"
      ],
      "@decorators/*": [
        "src/@core/src/decorators/*",
        "src/main/decorators/*",
      ],
      "@interfaces/*": [
        "src/@core/@share/src/interfaces/*",
        "src/@core/src/interfaces/*",
        "src/main/interfaces/*",
      ],
      "@dto/*": [
        "src/@core/@share/src/dto/*"
      ],
      "@entity/*": [
        "src/@core/src/entities/*"
      ],
      "@services/*": [
        "src/main/services/*"
      ],
      "@app/*": [
        "src/main/*"
      ],
      "@test/*": [
        "src/test/*"
      ],
      "@share/*": [
        "src/@core/@share/src/*"
      ],
      "@core/*": [
        "src/@core/src/*"
      ],
      "@typings/*": [
        "./typings/*"
      ],
      "*": [
        "node_modules/*"
      ]
    },
    "typeRoots": [
      "node_modules/@types",
      "./typings",
      "node_modules/typeorm-faker/@types"
    ],
    "types": [
      "mocha",
      "chai",
      "node",
      "test",
      "bootpay",
      "typeorm-faker"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
